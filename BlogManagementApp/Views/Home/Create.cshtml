@model BlogManagementApp.Models.UserListEdit

@{
    ViewData["Title"] = "Create";
    Layout = "_StaticLayout";
}
<form class="max-w-md mx-auto mt-10" asp-action="Create" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-red-800 mb-2"></div>
    <div class="relative z-0 w-full mb-5 group">
        <input   asp-for="FullName" id="floating_email" class="block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer" placeholder=" " required />
